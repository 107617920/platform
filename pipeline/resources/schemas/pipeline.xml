<ns:tables xsi:schemaLocation="http://labkey.org/data/xml ..\..\..\..\..\schemas\tableInfo.xsd" xmlns:ns="http://labkey.org/data/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ns:table tableName="PipelineRoots" tableDbType="TABLE">
    <ns:columns>
      <ns:column columnName="_ts"/>
      <ns:column columnName="CreatedBy"/>
      <ns:column columnName="Created"/>
      <ns:column columnName="ModifiedBy"/>
      <ns:column columnName="Modified"/>
      <ns:column columnName="Container"/>
      <ns:column columnName="EntityId"/>
      <ns:column columnName="PipelineRootId"/>
      <ns:column columnName="Path"/>
      <ns:column columnName="Providers"/>
      <ns:column columnName="Type"/>
      <ns:column columnName="KeyBytes"/>
      <ns:column columnName="KeyPassword"/>
      <ns:column columnName="CertBytes"/>
      <ns:column columnName="Searchable"/>
    </ns:columns>
  </ns:table>
  <ns:table tableName="StatusFiles" tableDbType="TABLE">
    <ns:columns>
      <ns:column columnName="_ts">
          <ns:isHidden>true</ns:isHidden>
      </ns:column>
      <ns:column columnName="CreatedBy"/>
      <ns:column columnName="Created">
        <ns:formatString>DateTime</ns:formatString>
        <ns:displayWidth>120</ns:displayWidth>
      </ns:column>
      <ns:column columnName="ModifiedBy"/>
      <ns:column columnName="Modified">
        <ns:formatString>DateTime</ns:formatString>
      </ns:column>
      <ns:column columnName="Container"/>
      <ns:column columnName="EntityId"/>
      <ns:column columnName="RowId"/>
      <ns:column columnName="Status">
        <ns:displayWidth>120</ns:displayWidth>
        <ns:url>/pipeline-status/details.view?rowId=${RowId}</ns:url>
      </ns:column>
      <ns:column columnName="Info"/>
      <ns:column columnName="FilePath">
        <ns:displayWidth>500</ns:displayWidth>
      </ns:column>
      <ns:column columnName="Email"/>
      <ns:column columnName="DataUrl"/>
      <ns:column columnName="Description">
          <ns:displayWidth>500</ns:displayWidth>
      </ns:column>
      <ns:column columnName="HadError"/>
      <ns:column columnName="Job"/>
      <ns:column columnName="Provider"/>
      <ns:column columnName="JobParent"/>
      <ns:column columnName="JobStore"/>
      <ns:column columnName="ActiveTaskId"/>
    </ns:columns>
  </ns:table>
</ns:tables>
